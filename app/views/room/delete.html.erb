<!-- template for deleting a room -->
<div class="row-fluid">
  <div class="span2">
    <h2> Deleting Room </h2> <!-- title -->
  </div>
  <div class="span7 offset1">
    <!-- warning for the user, with name of room to be deleted -->
    <h2><small>You are about to delete "<strong><%= @room_toDelete.name %></strong>", this action is irreversible. This will also delete all bookings for this room.</small></h2>
  </div>
</div>
<div class="row-fluid">
  <div class="span4 offset3">
    <!-- confirm button -->
    <%= link_to "Confirm", {:action => "process_delete", :id => @room_toDelete.id }, :class => "btn btn-danger" %>
    <!-- cancel button -->
    <%= link_to "Cancel", :back, :class => "btn btn-warning" %>
  </div>
</div>